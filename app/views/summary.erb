
    <!-- Contact Section -->
    <section id="contact">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">Summary of Your Concern</h2>


                    <h3 class="section-subheading text-muted">You have uploaded a photo of a civic concern in <a href="http://maps.google.com/?q=<%= @image.get_address %>"><%= @image.get_address %></a>. Select a concern label from the drop down menu and we'll send an email on your behalf to Mayor <%= @mayor.name %>!</h3>
                </div>

    <div class="row">
        <div class="container">
          <form role="form">
            <div class="form-group">
              <label for="sel1">How would you categorize your Civic Concern? (select one):</label>
              <br>
              <select class="form-control" id="sel1">
                <option>Vandalism of Public Property</option>
                <option>Untidiness or Litter of a Public Space</option>
                <option>Excessive Loitering</option>
                <option>Safety Concerns or Public Danger</option>
                <option>Disturbance of the Peace</option>
                <option>Unlicensed Vendor</option>
                <option>Suspicious or Unlawful Behaviour</option>
              </select>
            </div>
          </form>
        </div> 
       <br>
        <div class="form-group">
            <input type="email" class="form-control" placeholder="Enter Your email if you would like a copy (optional) *" id="email" required data-validation-required-message="Please enter your email address (optional).">
            <p class="help-block text-danger"></p>
        </div>
            
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <img src="uploads/test_01.jpg" title="See My Photo"><p="" class="help-block text-danger" style="
                    height: 375px;
                    width: 450px;
                ">
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="col-lg-12 text-center">
            <div id="success"></div>
            <button type="submit" class="btn btn-xl">Send Message</button>
        </div>
    </div>

