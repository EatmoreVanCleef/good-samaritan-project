    <!-- Contact Section -->
    <section id="contact">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">Summary of Your Concern</h2>
                    <h3 class="section-subheading text-muted">You have uploaded a photo of a civic concern in <%= @image.print_location %>. Select a concern label from the drop down menu and we'll do the rest!</h3>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <form name="sentMessage" id="contactForm" novalidate>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="TODO: drop down of concerns categories  *" id="name" required data-validation-required-message="What is the nature of your concern?">
                                    <p class="help-block text-danger"></p>
                                </div>
                                <div class="form-group">
                                    <input type="email" class="form-control" placeholder="Enter Your email if you would like a copy (optional) *" id="email" required data-validation-required-message="Please enter your email address (optional).">
                                    <p class="help-block text-danger"></p>
                                </div>
                                
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <img src="uploads/test_01.jpg" title="See My Photo"><p="" class="help-block text-danger" style="
                                        height: 375px;
                                        width: 450px;
                                    ">
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <div class="col-lg-12 text-center">
                                <div id="success"></div>
                                <button type="submit" class="btn btn-xl">Send Message</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>